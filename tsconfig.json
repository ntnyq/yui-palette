{
  "compilerOptions": {
    "outDir": "./public",
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["react"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
